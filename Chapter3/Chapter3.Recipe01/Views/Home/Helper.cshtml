@model Chapter3.Recipe01.Models.Guitar
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    // ViewBag.Title = "Home Page";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <fieldset>
        <legend>New Guitar Form</legend>
        <ul class="list-unstyled">
            <li class="form-group">
                @Html.LabelFor(m => m.Brand)
                @Html.TextBoxFor(m => m.Brand)
            </li>
            <li class="form-group">
                @Html.LabelFor(m => m.Model)
                @Html.TextBoxFor(m => m.Model)
            </li>
            <li class="form-group">
                @Html.LabelFor(m => m.HasWhammyBar)
                @Html.EditorFor(m => m.HasWhammyBar)
            </li>
        </ul>
        <input type="submit" value="Save" class="btn btn-primary" />
    </fieldset>
}